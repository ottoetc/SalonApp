<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hair Salon</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
    <script src="/Content/js/jquery-1.12.0.js" type="text/javascript"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/scripts.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>@Model.GetName() Edit</h1>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <h3>Update Client Name</h3>
          <form action="/client/edit/@Model.GetId()" method="post">
            <input type="hidden" name="_method" value="PATCH">
            <input name="client-id" type="hidden" value="@Model.GetId()">
            <label for="client-name">Enter a new name</label>
            <input id="client-name" name="client-name">
            <button type="submit">Update</button>
          </form>
        </div>
        <div class="col-sm-6">

        </div>
      </div>
      <p><a href="/">Home</a></p>
    </div>
  </body>
</html>
