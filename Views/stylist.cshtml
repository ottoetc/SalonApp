<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hair Salon</title>
    <link href="../Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="../Content/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="../Content/css/styles.css" rel="stylesheet" type="text/css">
    <script src="../Content/js/jquery-1.12.0.js" type="text/javascript"></script>
    <script src="../Content/js/bootstrap.min.js"></script>
    <script src="../Content/js/scripts.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>@Model["stylist"].GetName() Client List</h1>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <h3>Add New Clients</h3>
          <form action='/client/new' method='post'>
            <label for="client-name">Enter Client Name</label>
            <input name="client-name" type="text">
            <button type="submit">Add</button>
          </form>
        </div>
        <div class="col-sm-6">
          <h3>All Clients</h3>
          @if (@Model["clients"].Count == 0)
          {
            <p>There are currently no clients!</p>
            <p>Use the form to the left to add a client</p>
          }
          <ul>
            @foreach (var client in @Model["clients"])
            {
              <li><a href="/client/@client.GetId()">@client.GetName()</a> <a href="/client/edit/@client.GetId()">Edit</a> | <a href="/client/delete/@client.GetId()">Delete</a></li>
            }
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
