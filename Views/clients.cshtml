<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hair Salon</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
    <script src="/Content/js/jquery-1.12.0.js" type="text/javascript"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/scripts.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>Clients</h1>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <h3>Clients</h3>
          @if (@Model["allClients"].Count == 0)
          {
            <p>There are currently no clients!</p>
            <p>Use the form to the right to add a client</p>
          }
          <ul>
            @foreach(var client in @Model["allClients"])
            {
              <li>@client.GetName() <a href="/client/edit/@client.GetId()">Edit</a> | <a href="/client/delete/@client.GetId()">Delete</a></li>
            }
          </ul>
        </div>
        <div class="col-sm-6">
          <h3>Add a Client</h3>
          <form action="/clients/new" method="post">
            <label for="client-name">Client Name</label>
            <input id="client-name" name="client-name" type="text">
            <select name="stylist-id">
              @foreach (var stylist in @Model["allStylists"])
              {
                <option value="@stylist.GetId()">@stylist.GetName()</option>
              }
            </select>
            <button type="submit">Add</button>
          </form>
        </div>
      </div>
      <p><a href="/stylists">Stylists</a></p>
      <p><a href="/">Home</a></p>
    </div>
  </body>
</html>
